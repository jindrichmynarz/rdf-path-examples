@prefix :     <http://purl.org/lodsight/rdf-path#> .
@prefix ex:   <http://example.com/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix gr:   <http://purl.org/goodrelations/v1#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .

# Path

ex:Path2 a rdfs:Class ;
  rdfs:subClassOf :Path, [
    a owl:Restriction ;
    owl:onProperty :hasStep ;
    owl:allValuesFrom ex:Step1
  ] .

ex:Step1 a rdfs:Class ;
  rdfs:subClassOf :Step, [
    a owl:Restriction ;
    owl:onProperty :start ;
    owl:allValuesFrom ex:BusinessEntity
  ], [
    a owl:Restriction ;
    owl:onProperty :edge ;
    owl:hasValue foaf:page
  ], [
    a owl:Restriction ;
    owl:onProperty :end ;
    owl:allValuesFrom ex:Document
  ], [
    a owl:Restriction ;
    owl:onProperty :order ;
    owl:hasValue 1
  ] .

ex:Step2 a rdfs:Class ;
  rdfs:subClassOf :Step, [
    a owl:Restriction ;
    owl:onProperty :start ;
    owl:allValuesFrom ex:Document
  ], [
    a owl:Restriction ;
    owl:onProperty :edge ;
    owl:hasValue rdfs:label
  ], [
    a owl:Restriction ;
    owl:onProperty :end ;
    owl:allValuesFrom ex:string
  ], [
    a owl:Restriction ;
    owl:onProperty :order ;
    owl:hasValue 2
  ] .

ex:BusinessEntity a rdfs:Class ;
  rdfs:subClassOf gr:BusinessEntity .

ex:Document a rdfs:Class ;
  rdfs:subClassOf foaf:Document .

ex:string a rdfs:Datatype ;
  rdfs:subClassOf xsd:string .

# We need to know the classes of path nodes

gr:BusinessEntity a rdfs:Class .

foaf:Document a rdfs:Class .

xsd:string a rdfs:Datatype .

# A path instance

[] a ex:Path2 ;
  :hasStep [
    a ex:Step1 ;
    :start <http://linked.opendata.cz/resource/business-entity/7d179039-1f42-4559-90ea-8a624606e663> ;
    :edge foaf:page ;
    :end <http://www.strabag.cz> ;
    :order 1
  ], [
    a ex:Step2 ;
    :start <http://www.strabag.cz> ;
    :edge rdfs:label ;
    :end "Strabag, a.s." ;
    :order 2
  ] .
